{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build all",
			"command": "/usr/bin/g++",
			"args": [
				"-I/usr/include/",
				"-g",
				"*.cpp",
				"-o",
				"${workspaceFolder}/target/sim",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}